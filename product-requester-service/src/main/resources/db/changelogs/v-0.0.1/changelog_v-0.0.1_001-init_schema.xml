<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet author="Oleksandr Khomenko" id="v-0.0.1_001_000001" runOnChange="true">
        <createTable tableName="product_categories">
            <column name="id" type="BIGINT(8)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="TINYTEXT"/>
            <column name="description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet author="Oleksandr Khomenko" id="v-0.0.1_001_000002" runOnChange="true">
        <createTable tableName="products">
            <column name="id" type="BIGINT(8)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="TINYTEXT"/>
            <column name="description" type="TEXT"/>
            <column name="price" type="DECIMAL(10, 2)"/>
            <column name="product_category_id" type="BIGINT(8)"/>
        </createTable>
    </changeSet>

    <changeSet author="Oleksandr Khomenko" id="v-0.0.1_001_000003" runOnChange="true">
        <addForeignKeyConstraint baseColumnNames="product_category_id"
                                 baseTableName="products"
                                 constraintName="products_product_categories_id_fk"
                                 onDelete="CASCADE"
                                 referencedColumnNames="id"
                                 referencedTableName="product_categories"/>
    </changeSet>
</databaseChangeLog>
